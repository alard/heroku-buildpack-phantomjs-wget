#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -eo pipefail


indent() {
  sed -u 's/^/       /'
}

# Go to build dir
cd $1

echo "-----> Fetching buildpack files (20120530b)"
curl -L -s -o files.tar.gz https://github.com/downloads/alard/heroku-buildpack-phantomjs-wget/heroku-phantomjs-wget-files-20120530b.tar.gz
tar -zxf files.tar.gz
rm files.tar.gz

echo "-----> Rebuilding font information cache"
fc-cache -f -v

